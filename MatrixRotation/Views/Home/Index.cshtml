@model MatrixViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        @for (int i = 0; i < Model.Size; i++)
        {
            <div class="row">
                @for (int j = 0; j < Model.Size; j++)
                {
                    <div class="col-sm-2 matrix-cell matrix-text">
                        @Model.Matrix[i][j]
                    </div>
                }
            </div>
        }
    </div>
    <div class="col-sm-3">
    </div>
</div>
<div class="row">
    <div class="btn btn-primary" value="Rotate" onclick="location.href='@Url.Action("Rotate", "Home", Model)'">Повернуть</div>
    <div class="btn btn-primary">Сохранить</div>
    <div class="btn btn-primary">Загрузить</div>
    <div class="btn btn-primary">Сгенерировать</div>
</div>
